<UserControl x:Class="qualityControl.application.View.Controls.ClassifierControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="91*"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0">

            <Label Content="Настройки классификации:" Margin="2"/>

            <CheckBox x:Name="chkWrinkles" 
                      IsChecked="True" 
                      Margin="2"
                      Content="Морщины" />

            <CheckBox x:Name="chkStamp"  
                      IsChecked="True" 
                      Margin="2"
                      Content="Оттиск на канальцах" />

            <CheckBox x:Name="chkBias" 
                      IsChecked="True"
                      Margin="2"
                      Content="Смещение канальцев (центр)" />

            <CheckBox x:Name="chkBetween" 
                      IsChecked="True"
                      Margin="2"
                      Content="Морщины между канальцев" />

            <CheckBox x:Name="chkMembrane" 
                      IsChecked="True" 
                      Margin="2"
                      Content="Замятие мембраны"/>

        </StackPanel>

        <Button Command="{Binding Commands.SaveSettings}"
                Grid.Row="1"
                Height="25"
                Content="Сохранить" 
                VerticalAlignment="Top"
                Margin="10"/>
    </Grid>
</UserControl>
